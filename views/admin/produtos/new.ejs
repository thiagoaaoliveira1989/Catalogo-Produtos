<%- include('../../partials/header'); %>

 <%- include('../../partials/navbar'); %>

 <div class="container d-flex  justify-content-center">

    

    <div class="card mt-3" >
        <div class="card-header">
            <h2 class="text-center">Cadastro de Produtos</h2>
        </div>
        <div class="card-body ">
            <form action="/admin/produtos/save" method="post" enctype="multipart/form-data">
            
                <input class="form-control mb-1" type="text" name="codigo" id="codigo" placeholder="Codigo do Produto">
                <input class="form-control mb-1" type="text" name="title" id="title" placeholder="Nome do Produto">
                <input class="mb-1" type="file" accept="image/*" name="sampleFile">
                <input class="form-control mb-1" type="text" name="preco" id="preco" placeholder="R$">
                <input class="form-control mb-1" type="text" name="estoque" id="estoque" placeholder="Estoque">
          
                <label><strong>Categoria</strong></label>
                <select name="category" class="form-control mt-2" id="">
                    <% categories.forEach(element => { %>
                        <option value="<%= element.id %>" ><%= element.title %></option>
                        <% }); %>
                </select>
                
                <br>
                <button type="submit" class="btn btn-primary w-100 mb-2">Cadastrar</button>
            </form>
            
        </div>
        
    </div> 
</div>

<%- include('../../partials/footer'); %>